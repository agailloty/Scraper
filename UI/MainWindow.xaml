<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
	<Grid.ColumnDefinitions>
			<ColumnDefinition Width="9*" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
	</Grid.ColumnDefinitions>

      <Grid.RowDefinitions> 
         <RowDefinition/> 
         <RowDefinition/> 
         <RowDefinition Height="8*"/> 
        <RowDefinition/> 
        <RowDefinition/> 
         <RowDefinition/> 
         <RowDefinition/> 
        <RowDefinition/> 
      </Grid.RowDefinitions> 

      <Label Content="Query" Margin="1"/>
        <TextBox Grid.Row="0" Grid.Column="0" Text="Data analyst" Name="txtQuery" Margin="1"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="France" Name="txtLocation" Margin="1"/>
        <TextBox Grid.Row="0" Grid.Column="2" Text="4" Name="txtNbPages" Margin="1"/>
        <Button Grid.Row="0" Grid.Column="3" Click="BtnOK_Click" Content="OK" Margin="1"/>

        <TextBox Grid.Row="2" TextWrapping="Wrap" AcceptsReturn="True" Grid.Column="0" Name="txtResponse"/>
    </Grid>
</Window>
